%dir %{_includedir}/%{name}/%{name}/util
%{_includedir}/%{name}/%{name}/util/*.h
%dir %{_includedir}/%{name}/simplestore
%{_includedir}/%{name}/simplestore/*.h
%dir %{_datadir}/doc/%{name}-%{version}/python
%dir %{_datadir}/doc/%{name}-%{version}/python/examples
%{_datadir}/doc/%{name}-%{version}/python/examples/*.py
%{_datadir}/doc/%{name}-%{version}/python/examples/*.pyc
%{_datadir}/doc/%{name}-%{version}/python/examples/*.pyo
%dir %{_datadir}/doc/%{name}-%{version}/python/html
%{_datadir}/doc/%{name}-%{version}/python/html/*.gif
%dir %{_datadir}/doc/%{name}-%{version}/ruby
%dir %{_datadir}/doc/%{name}-%{version}/ruby/examples
%{_datadir}/doc/%{name}-%{version}/ruby/examples/*.rb
%dir %{_datadir}/doc/%{name}-%{version}/ruby/html
%{_datadir}/doc/%{name}-%{version}/ruby/html/*.gif


%files python
%defattr(-,root,root,-)
%dir %{python_sitelib}/_zorba_api.so
%dir %{python_sitelib}/zorba_api.*

%files php
