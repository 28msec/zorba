import sys
sys.path.append('@pythonPath@')
import zorba_api

def example1(zorba):
  xquery = zorba.compileQuery('1+2')
  print xquery.execute()
  return

def example2(zorba):
  xquery = zorba.compileQuery('(1,2,3,4,5)')
  iter = xquery.iterator()
  iter.open()
  item = zorba_api.S_Item_createEmptyItem()
  while iter.next(item):
    print item.getStringValue()
  iter.close()
  iter.destroy()
  return

def example3(zorba):
  try:
    xquery = zorba.compileQuery('1 div 0')
    print xquery.execute()
  except zorba_api.S_DynamicException, a:
    print a.getMsg()
  return

zorba = zorba_api.S_Zorba_getInstance()

print 'Example1:'
example1(zorba)
print ''

print 'Example2:'
example2(zorba)
print ''

print 'Example3:'
example3(zorba)
print ''

zorba.shutdown()
