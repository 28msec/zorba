# Mandatory vars: $ROOT, $SRC, $BUILD, $ZORBA
# Optional vars:  $BUILD_TYPE

test "$BUILD_TYPE" || export BUILD_TYPE="Debug"

rm -f $ZORBA

cd $BUILD

cmake -DCMAKE_BUILD_TYPE="$BUILD_TYPE" -DZORBA_WITH_REST=OFF $SRC
make -j 2

test -f $ZORBA || exit 1
