
module namespace idx = "http://www.w3.org/TestModules/idx";

declare namespace zorba = "http://www.zorba-xquery.com/zorba/op-extensions";

declare ordered index idx:foo
on doc("auction.xml")/site/people/person
by (fn:data(./@id));


declare function idx:probe($indexName as xs:QName, $id as xs:string)
{
  zorba:probe-index-point($indexName, $id)
};


declare function idx:probe2($indexName as xs:QName, $id as xs:string)
{
  zorba:probe-index-range($indexName,
                          $id,
                          1,
                          xs:boolean("true"), 
                          xs:boolean("false"),
                          xs:boolean("true"),
                          xs:boolean("false"))
};
