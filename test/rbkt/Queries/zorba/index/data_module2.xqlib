
datamodule namespace idx = "http://www.w3.org/TestModules/idx";

declare namespace zorba = "http://www.zorba-xquery.com/zorba/op-extensions";

declare index idx:foo
on doc("auction.xml")/site/people/person
by ((.//city))
ordered;


declare function idx:probe($indexName as xs:QName, $city as xs:string?)
{
  zorba:probe-index-point($indexName, $city)
};


declare function idx:probe2($indexName as xs:QName, $city as xs:string)
{
  zorba:probe-index-range($indexName,
                          $city,
                          1,
                           xs:boolean("true"),
                           xs:boolean("false"),
                           xs:boolean("true"),
                           xs:boolean("false"))
};

