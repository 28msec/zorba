module namespace math="http://www.w3.org/2005/xpath-functions/math";

import module namespace zorba-math = "http://www.zorba-xquery.com/modules/math";

declare function math:pi() as xs:double
{
    zorba-math:pi()
};


declare function math:sqrt($arg as xs:double?) as xs:double?
{
    if($arg) then zorba-math:sqrt($arg) else ()
};


declare function math:sin($arg as xs:double?) as xs:double?
{
    if($arg) then zorba-math:sin($arg) else ()
};


declare function math:cos($arg as xs:double?) as xs:double?
{
    if($arg) then zorba-math:cos($arg) else ()
};


declare function math:tan($arg as xs:double?) as xs:double?
{
    if($arg) then zorba-math:tan($arg) else ()
};


declare function math:asin($arg as xs:double?) as xs:double?
{
    if($arg) then zorba-math:asin($arg) else ()
};


declare function math:acos($arg as xs:double?) as xs:double?
{
    if($arg) then zorba-math:acos($arg) else ()
};


declare function math:atan($arg as xs:double?) as xs:double?
{
    if($arg) then zorba-math:atan($arg) else ()
};
